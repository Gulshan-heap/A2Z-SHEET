class Solution {
    // private:
    //     void left(vector<vector<int>>& matrix, int i, int j) {
    //         for (int index = j - 1; index >= 0; index--) {
    //             matrix[i][index] = 0;
    //         }
    //     }

    //     void right(vector<vector<int>>& matrix, int i, int j) {
    //         int m = matrix[0].size();
    //         for (int index = j + 1; index < m; index++) {
    //             matrix[i][index] = 0;
    //         }
    //     }

    //     void top(vector<vector<int>>& matrix, int i, int j) {
    //         for (int index = i - 1; index >= 0; index--) {
    //             matrix[index][j] = 0;
    //         }
    //     }

    //     void down(vector<vector<int>>& matrix, int i, int j) {
    //         int n = matrix.size();
    //         for (int index = i + 1; index < n; index++) {
    //             matrix[index][j] = 0;
    //         }
    //     }

public:
    void setZeroes(vector<vector<int>>& matrix) {
        int n = matrix.size();
        int m = matrix[0].size();

        int col0 = 1;
        // matrix[0][..]-> col and matrix[...][0]->row
        for (int i = 0; i < n; i++) {
            for (int j = 0; j < m; j++) {
                if (matrix[i][j] == 0) {
                    matrix[i][0] = 0;

                    if (j != 0)
                        matrix[0][j] = 0;
                    else
                        col0 = 0;
                }
            }
        }

        for (int i = 1; i < n; i++) {
            for (int j = 1; j < m; j++) {
                if(matrix[i][j]!=0){
                    if (matrix[i][0]==0 || matrix[0][j]==0) {
                        matrix[i][j] = 0;
                    }
                }
            }
        }

        if (matrix[0][0] == 0) {
            for (int j = 0; j < m; j++)
                matrix[0][j] = 0;
        }

        if (col0 == 0) {
            for (int i = 0; i < n; i++)
                matrix[i][0] = 0;
        }
    }
};
